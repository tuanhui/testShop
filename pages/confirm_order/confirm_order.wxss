Page {
  background-color: rgb(240, 240, 243);
}
.product-list .product {
  background-color: #fff;
  padding: 27rpx 29rpx 28rpx 29rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
}
.product .pic {
  width: 200rpx;
  height: 150rpx;
}
.product .info {
  margin-left: 32rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}
.product .info .title {
    line-height: 42rpx;
    font-size: 30rpx;
    color: #353535;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.product .info .intro {
  line-height: 44rpx;
  font-size: 26rpx;
  color: #B2B2B2;
}
.product .info .price-count {
   height: 60rpx;
   display: flex;
   flex-direction: row;
}
.product .info .price-count .price {
  flex: 1;
  font-size: 36rpx;
  color: #409CE0;
   line-height: 60rpx;
  font-weight: normal;
  font-family: sans-serif;
}
.product .info .price-count .price::first-letter {
  font-size: 32rpx;
}
.product .info .price-count .count {
   color: rgb(161, 161, 161);
   font-size: 26rpx;
   font-family: sans-serif;
}
.product .info .price-count .count-container {
    margin-top: 5rpx;
    border: 1rpx solid rgb(220, 220, 220);
    border-radius: 8rpx;
    box-sizing: border-box;
    float: right;
    height: 50rpx;
    position: relative;
    z-index: 0;
    line-height: 50rpx;
    overflow: hidden;
}
.product .info .price-count .count-container .count-item  {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  font-size: 30rpx;
  background: #FAFAFA;
  box-sizing: border-box;
  vertical-align: top; 
  line-height: 46rpx;
  border-right: 1rpx solid #CBCBCB;
  color: #353535;
}
.product .info .price-count .count-container .count-item.minus.disable {
  color: rgb(220, 220, 220);
}
.product .info .price-count .count-container .count-item.count {
  width: 70rpx;
  background-color: #fff;
}
.product .info .price-count .count-container .count-item:last-child {
  border-right: 0;
}
.product-list .dispatching {
    display: flex;
    flex-direction: row;
    background-color: #fff;
    font-size: 28rpx;
    padding: 31rpx 24rpx 47rpx 40rpx;
}
.product-list .dispatching .left {
  text-align: left;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  line-height: 33rpx;
}
.product-list .dispatching .left .name {
  color: #353535;
  opacity: 1;  
  margin-bottom: 12rpx;
}
.product-list .dispatching .left .type {
  color: #353535;
  opacity: 0.5;  
}
.product-list .dispatching .right {   
   flex: 1;
   text-align: right;
   font-size: 28rpx;
   color: #353535;
    opacity: 0.5;  
   line-height: 33rpx;
}
.expressage .item.extend {
  border-bottom: 1rpx solid rgb(240, 240, 243);
}
.expressage .item{
    border-top: 1rpx solid rgb(240, 240, 243);
    display: flex;
    flex-direction: row;
    height: 120rpx;
    line-height: 120rpx;
    background-color: #fff;
    font-size: 28rpx;
    color: #353535;
    padding-left: 25rpx;
    padding-right: 25rpx;
}
.expressage .item .name {
  color: #353535;
  min-width: 121rpx;
  text-align: right;
}
.expressage .item .name.hint {
  color: #353535;
  opacity: 0.5;
}
.expressage .item .value  {
  height: 40rpx;
  font-size: 28rpx;
  flex: 1;
  line-height: 120rpx;
  opacity: 0.5;
  color: #353535;
  box-sizing: border-box;
  margin-left: 47rpx;
}
.expressage .item .value.hint {
  text-align: right;

} 
.value-holder {
  color: #353535;
}
.expressage .item input.value {
  margin: auto 0;
  margin-left: 47rpx;
}
.expressage .other {
  border-top: 1rpx solid rgb(240, 240, 243);
  height: 170rpx;
  line-height: 170rpx;
  font-size: 28rpx;
  background-color: #fff;
  text-align: center;
}
.expressage .other .arrow-bottom {
  width: 26rpx;
  height: 14rpx;
  display: inline-block;
  position: relative;
  overflow: hidden;
}
.expressage .other .value {
  opacity: 0.5;
  color: #353535;
}
.expressage .other .arrow-bottom::after{
  content: 'â—‡';
  width: 20rpx;
  height: 20rpx;
  color: #979797;
  font-weight: bold;
  position: absolute;
  left: 0;
  top: -82rpx;
  font-size: 26rpx;
}
.accounts {
  padding-bottom: 70rpx;
  background-color: #fff;
}
.accounts .item {
  margin-left: 50rpx;
  margin-right: 26rpx;
  display: flex;
  flex-direction: row;
  margin-bottom: 32rpx;
  font-weight: normal;
  font-size: 28rpx;
  opacity: 0.5;
  line-height: 33rpx;
  color: #353535;
}
.accounts .item:first-child {
  padding-top: 28rpx;
}
.accounts .item:last-child {
  margin-bottom: 20rpx;
}
.accounts .item .name {
  text-align: right;
  min-width: 106rpx;
}
.accounts .item .value {
  flex: 1;
  text-align: right;
}
.accounts .total {
  width: 100%;
  border-top: 1rpx solid rgb(240, 240, 243);
  height: 86rpx;
  padding-right: 26rpx;
  line-height: 86rpx;
  box-sizing: border-box;
  text-align: right;
}
.accounts .total .name {
  font-size: 28rpx;
  color: #353535;
}
.accounts .total .value {
  font-size: 40rpx;
  color: #409CE0;
  line-height: 50rpx;
  margin-top: 16rpx;
}
.comit-btn {
  background-color: #409CE0;
  color: #fff;
  position: relative;
  border-radius: 9rpx;
  margin: 21rpx 25rpx 0 25rpx;
}
.comit-btn:active {
  opacity: .7;
}