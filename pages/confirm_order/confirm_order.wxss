Page {
  background-color: rgb(249, 249, 249);
}
.address {
  margin-top: 20rpx;
  border-top: 1rpx solid rgb(236, 236, 236);
}
.address-info {
  padding: 20rpx 40rpx 20rpx 20rpx;
  background-color: #fff;
  position: relative;
  border-bottom: 1rpx solid rgb(236, 236, 236);
}
.address-info .owner {
    height: 80rpx;
    line-height: 80rpx;
    overflow: hidden;
    font-size: 36rpx;
    color: rgb(97, 97, 97);
}
.address-info .text {
  line-height: 50rpx;
  font-size: 30rpx;
  color: rgb(158, 158, 158);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.address-info .arrow {
  position: absolute;
  right: 20rpx;
  top: 50%;
}
.add-address {
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  padding: 0 20rpx;
  background-color: #fff;
  flex-direction: row;
  border-bottom: 1rpx solid rgb(236, 236, 236);
}
.add-address .icon {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  margin-top: 25rpx;
  background-color: blue;
  color: white;
  font-size: 36rpx;
  opacity: .5;
  text-align: center;
  line-height: 50rpx;
  border-radius: 8rpx;
}
.add-address .text {
  flex: 1;
  text-align: left;
  font-size: 30rpx;
  color: rgb(97, 97, 97);
  line-height: 100rpx;
  margin-left: 20rpx;
}
.product-list {
  margin-top: 20rpx;
  border-top: 1rpx solid rgb(236, 236, 236);
  border-bottom: 1rpx solid rgb(236, 236, 236);
  background-color: #fff;
}
.product {
  padding: 20rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
}
.product .pic {
  width: 160rpx;
  height: 160rpx;
}
.product .info {
  margin-left: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}
.product .info .title {
    line-height: 50rpx;
    font-size: 30rpx;
    color: rgb(97, 97, 97);
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.product .info .price-count {
   height: 100rpx;
   line-height: 100rpx;
   display: flex;
   flex-direction: row;
}
.product .info .price-count .price {
  flex: 1;
  color: #f00;
  font-size: 36rpx;
  font-weight: normal;
  font-family: sans-serif;
}
.product .info .price-count .price::first-letter {
  font-size: 32rpx;
}
.product .info .price-count .count {
   color: rgb(161, 161, 161);
   font-size: 26rpx;
   font-family: sans-serif;
}
.product .info .price-count .count-container {
    margin-top: 21rpx;
    border: 1rpx solid rgb(220, 220, 220);
    border-radius: 8rpx;
    box-sizing: border-box;
    float: right;
    height: 50rpx;
    position: relative;
    z-index: 0;
    line-height: 50rpx;
    overflow: hidden;
}
.product .info .price-count .count-container .count-item  {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  font-size: 30rpx;
  box-sizing: border-box;
  vertical-align: top; 
  line-height: 50rpx;
  border-right: 1rpx solid rgb(220, 220, 220);
  color: rgb(102, 102, 102);
}
.product .info .price-count .count-container .count-item.minus.disable {
  color: rgb(220, 220, 220);
}
.product .info .price-count .count-container .count-item.count {
  width: 70rpx;
}
.product .info .price-count .count-container .count-item:last-child {
  border-right: 0;
}
.product-list .dispatching {
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  padding-right: 20rpx;
  border-top: 1rpx solid rgb(236, 236, 236);
  color: rgb(97, 97, 97);
}
.product-list .dispatching .pattern-key {
    flex: 1;
    text-align: left;
    font-size: 30rpx;
}
.product-list .dispatching .pattern-value {
    font-size: 24rpx;
}
.accounts {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid rgb(236, 236, 236);
}
.accounts .item {
  display: flex;
  flex-direction: row;
  height: 58rpx;
  font-size: 32rpx;
  line-height: 58rpx;
}
.accounts .item .name {
  flex: 1;
  color: rgb(97, 97, 97);
  text-align: left;
}
.accounts .item .value {
  color: #f00;
}
.accounts .total {
  border-top: 1rpx solid rgb(236, 236, 236);
  height: 100rpx;
  line-height: 100rpx;
  box-sizing: border-box;
  font-size: 40rpx;
  color: rgb(97, 97, 97);
  text-align: right;
}
.accounts .total .value {
  color: #f00;
}
.comit-btn {
  margin-top: 0rpx;
}