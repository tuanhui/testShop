/**index.wxss**/
.product_list {
  position: absolute;
  left: 0;
  top: 0;
}
.item {
  height: 300rpx;
  padding: 20rpx;
  margin: 20rpx;
  position: relative;
  box-sizing: border-box;
  border-radius: 4rpx;
  box-shadow: 2px 2px 2px #eee, -2px -2px 2px #eee;
}
.item:active {
  background-color: #f2f2f2;
}
.item .item-l {
  height: 260rpx;
  vertical-align: top;
  width: 260rpx;
  position: absolute;
  left: 20rpx;
  top: 20rpx;
}
.item .item-r {
  vertical-align: top;
  margin-left: 280rpx;
}
.item .item-r .name {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 34rpx;
    line-height: 50rpx;
    font-weight: bold;
    color: rgb(80, 80, 80);
}
.item .item-r .price {
  line-height: 56rpx;
  margin-top: 10rpx;
  flex-direction: row;
}

.item .item-r .price .real {
  display: inline-block;
  font-size: 36rpx;
  color: #f00;
}

.item .item-r .price .original {
    color: #ddd;
    margin-left: 20rpx;
    font-size: 30rpx;
    display: inline-block;
    position: relative;

}
.item .item-r .price .original::after {
  content: '';
  position: absolute;
  left: -5%;
  top: 50%;
  height: 50%;
  transform: translateY(-5%);
  border-top: 4rpx solid rgba(0, 0, 0, .2);
  width: 110%;
}

.item .item-r .inventory {
  line-height: 60rpx;
  color: #999;
  margin-top: 10rpx;
  font-size: 28rpx;
}

.item .item-r .btn.buy {
  height: 52rpx;
  line-height: 52rpx;
  font-size: 30rpx;
  margin-top: 10rpx;
  color: #fff;
  position: absolute;
  z-index: 999;
  text-align: center;
  border-radius: 8rpx;
  background-color: rgb(255, 71, 93);
}