Page {
  background-color: #f2f2f2;
}
.swiper-img {
  width: 100%;
  height: 300rpx;
}
.item {
  padding: 25rpx 37rpx 24rpx 29rpx;
  background-color: #fff;
  margin-bottom: 18rpx;
  display: flex;
  flex-direction: row;
}
.item:active {
 opacity: .7;
}
.item .item-l {
  height: 220rpx;
  width: 269rpx;
  vertical-align: top;
  border-radius: 8rpx;
}
.item .item-r {
  flex: 1;
  margin-left: 42rpx;
}
.item .item-r .title {
  position: relative;
  height: 86rpx;

}
.item .item-r .name {
    position: absolute;
    left: 0;
    top: 0;
    background-color: #fff;
    z-index: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 30rpx;
    line-height: 42rpx;
    color: #353535;
}
.item .item-r .intro {
    position: absolute;
    left: 0;
    top: 42rpx;
    background-color: #fff;
    z-index: 1;
    font-size: 24rpx;
    height: 30rpx;
    line-height: 30rpx;
    color: #A2A2A2;
    margin: 4rpx 0 10rpx 0;
}
.item .item-r .price {
  line-height: 50rpx;
  flex-direction: row;
  display: flex;
}
.item .item-r .price .real {
  font-size: 36rpx;
  color: #409CE0;
  margin-right: 20rpx;
}
.item .item-r .price .real::first-letter {
  font-size: 30rpx;
}
.item .item-r .price .original {
  flex: 1;
  display: flex;
  flex-direction: row;
}
.item .item-r .price .original .name {
  position: static;
  font-size: 24rpx;
  padding-top: 2rpx;
  line-height: 50rpx;
  color: #B2B2B2;
}
.item .item-r .price .original .value {
  float: left;
  font-size: 28.8rpx;
  margin-left: 6rpx;
  line-height: 50rpx;
  color: #B2B2B2;
}
.item .item-r .price .original .value::first-letter {
  letter-spacing: -3rpx;
  font-size: 20rpx;
}
.item .item-r .btn.buy {
  width: 193rpx;
  height: 66rpx;
  line-height: 66rpx;
  font-size: 26rpx;
  margin-top: 14rpx;
  color: #fff;
  float: left;
  text-align: center;
  border-radius: 8rpx;
  background-color: #409CE0;
}
.time-container {
  height: 163rpx;
  padding: 26rpx 53rpx 29rpx 54rpx;
  background-color: #fff;
  margin-bottom: 1rpx;
}
.time-container .title {
  display: block;
  font-size: 30rpx;
  color: #353535;
  letter-spacing: 0;
  line-height: 37rpx;
  text-align: center;
}
.time-container .row {
  height: 98rpx;
  display: flex;
  margin-top: 31rpx;
  justify-content: flex-start;
  flex-direction: row;
}
.time-container .row .column-active {
  color: #ADADAD;
  padding: 0 10rpx;
  background-color: #F8F8F8;
  border-radius: 100rpx;  
  flex: 1;
  font-size: 26rpx;
  margin: 0 80rpx;
  white-space: nowrap;
  overflow: hidden;
  text-align: center;
  line-height: 102rpx;
  height: 102rpx;
}
.time-container .row .column-active .value{
  color: #409CE0;
  font-size: 36rpx;
  margin: 0 4rpx 0 20rpx;
}
.time-container .row .column {
    flex: 1;
    margin-right: 65rpx;   
}
.time-container .row .column:last-child {
  margin-right: 0;
}
.time-container .row .column .time {
  background-color: #F8F8F8;
  border-radius: 100rpx;
  height: 59rpx;
  font-size: 24rpx;
  line-height: 59rpx;
  text-align: center;
  letter-spacing: 0;
  position: relative;
  color: #7D7D7D;
}
.time-container .row .column:first-child .time {
    opacity: 0.3;
    background-color: #409CE0;
    color: white;
}

.time-container .row .column:nth-child(2) .time {
    background-color: #409CE0;
    color: white;
}
.time-container .row .column:first-child .time::before {
  content: '';
  position: absolute;
  left: 100%;
  top: 50%;
  transform: translateY(-50%);
  height: 9rpx;
  width: 420%;
  opacity: 0.2;
  background-color: #D8D8D8;
}
.time-container .row .column .status {
  opacity: 0.5;
  font-size: 22rpx;
  color: #7D7D7D;
  text-align: center;
  margin-top: 8rpx;
  letter-spacing: 0;
}
.time-container .row .column:first-child .status{
  opacity: 0.4;
  color: #409CE0;
}
.time-container .row .column:nth-child(2) .status{
  color: #409CE0;
  opacity: 1;
}

