Page {
  background-color: rgb(238, 238, 243);
}
.product_list {
  position: absolute;
  left: 0;
  top: 0;
}
.item {
  padding: 25rpx 0 24rpx 29rpx;
  background-color: #fff;
  margin-bottom: 18rpx;
  display: flex;
  flex-direction: row;
}
.item:active {
 opacity: .7;
}
.item .item-l {
  height: 220rpx;
  width: 269rpx;
  vertical-align: top;
  border-radius: 8rpx;
}
.item .item-r {
  flex: 1;
  margin-left: 42rpx;
}
.item .item-r .name {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 30rpx;
    line-height: 42rpx;
    color: #353535;
}
.item .item-r .intro {
    font-size: 24rpx;
    height: 30rpx;
    line-height: 30rpx;
    color: #A2A2A2;
    margin: 4rpx 0 10rpx 0;
}
.item .item-r .price {
  line-height: 50rpx;
  margin-top: 10rpx;
  flex-direction: row;
  display: flex;
}
.item .item-r .price .real {
  font-size: 36rpx;
  color: #409CE0;
  margin-right: 20rpx;
}
.item .item-r .price .real::first-letter {
  font-size: 30rpx;
}
.item .item-r .price .original .name {
  float: left;
  font-size: 24rpx;
  line-height: 50rpx;
  color: #B2B2B2;
}
.item .item-r .price .original .value {
  float: left;
  font-size: 28.8rpx;
  margin-left: 6rpx;
  line-height: 50rpx;
  color: #B2B2B2;
}
.item .item-r .price .original .value::first-letter {
  letter-spacing: -3rpx;
  font-size: 20rpx;
}
.item .item-r .btn.buy {
  width: 193rpx;
  height: 66rpx;
  line-height: 66rpx;
  font-size: 26rpx;
  margin-top: 14rpx;
  color: #fff;
  float: left;
  text-align: center;
  border-radius: 8rpx;
  background-color: #409CE0;
}