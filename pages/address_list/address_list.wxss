Page {
  background-color: rgb(249, 249, 249);
}
.address-list {
  background-color: #fff;
  padding-left: 20rpx;
}
.address-list .head {
  height: 100rpx;
  line-height: 100rpx;
  color: rgb(108, 108, 108);
  font-size: 30rpx;
  border-bottom: 1rpx solid rgb(236, 236, 236);
}
.address-list .address-item {
  display: flex;
  flex-direction: row;
  padding: 0 20rpx;
  border-bottom: 1rpx solid rgb(236, 236, 236);
}
.address-list .address-item .address-item-content {
  flex: 1;
  display: flex;
  flex-direction: row;
}
.address-list .address-item:last-child {
  border-bottom: 0;
}
.address-list .address-item .info {
  flex: 1;
  display: flex;
  padding: 10rpx 0;
  flex-direction: column;
}
.address-list .address-item .info .top {
  color: rgb(137, 137, 137);
  font-size: 36rpx;
}
.address-list .address-item .info .bottom {
  color: rgb(165, 165, 165);
  font-size: 30rpx;
  height: 80rpx;
  line-height: 40rpx;
}
.address-list .address-item .check {
  align-self: center;
  width: 80rpx;
} 
.address-list .address-item .del {
  font-size: 30rpx;
  color: rgb(255, 82, 58);
  align-self: center;
  padding: 10rpx;
  text-align: center;
}
.add-address {
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  background-color: #fff;
  border-top: 1rpx solid rgb(236, 236, 236);
  color: rgb(255, 82, 58);
  text-align: center;
  box-shadow: 2px 0 5px #ccc;
  position: fixed;
  bottom: 0;
  left: 0;
}