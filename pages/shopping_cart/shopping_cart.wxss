Page {
  background-color: rgb(240, 240, 243);
}
.head-tool {
  background-color: #fff;
  margin-bottom: 3rpx;
  height: 102rpx;
  line-height: 102rpx;
}
.head-tool .icon {
  float: left;
  width: 44rpx;
  height: 44rpx;
  vertical-align: top;
  padding: 29rpx 27rpx 29rpx 21rpx;
}
.head-tool .icon.delete {
  align-items: flex-end;
  float: right;
}
.head-tool .text {
  line-height: 102rpx;
  font-size: 28rpx;
  float: left;
}
.cart-item {
  padding: 23rpx 21rpx;
  margin-bottom: 18rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
}
.cart-item .check {
  display: block;
  width: 44rpx;
  height: 44rpx;
  margin: auto 26rpx auto 0rpx;
}
.cart-item .check > .c-pic {
  width: 20px;
  height: 20px;
}
.cart-item .pic {
  height: 220rpx;
  border-radius: 8rpx;
  width: 290rpx;
}
.cart-item .info {
  vertical-align: top;
  flex: 1;
  margin-left: 42rpx;
  display: flex;
  flex-direction: column;
}
.cart-item .info .name {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 30rpx;
    line-height: 42rpx;
    color: #353535;
}
.cart-item .info .intro {  
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    margin-top: 7rpx;
    font-size: 26rpx;
    line-height: 30rpx;
    color: #B2B2B2;
}
.cart-item .info .price {
  display: flex;
  flex-direction: row;
}
.cart-item .info .price .real{
  display: inline-block;
  font-size: 42rpx;
  color: #409CE0;
  line-height: 50rpx;
  margin-top: 7rpx;
}
.cart-item .info .price .real::first-letter {
  font-size: 32rpx;
}
.cart-item .info .price .prev {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  padding-right: 10rpx;
}
.cart-item .info .price .prev .title {
  font-size: 28rpx;
  line-height: 50rpx;
  color: #B2B2B2;
  margin-right: 9rpx;
}
.cart-item .info .price .prev .value {
  font-size: 32rpx;
  color: #B2B2B2;
  line-height: 50rpx;
  letter-spacing: -2rpx;
}
.cart-item .info .price .prev .value:first-letter {
  font-size: 20rpx;
}
.cart-item .info .count-container {
    display: flex;
    flex-direction: row;
    margin-top: 22rpx;
    border-radius: 8rpx;
    align-items: center;
    border: 1rpx solid #CBCBCB;
    box-sizing: border-box;
    position: relative;
    justify-content: center;
    width: 190rpx;
    overflow: hidden;
}
.cart-item .info .count-container .count-item  {
  display: block;
  width: 54rpx;
  height: 54rpx;
  font-size: 30rpx;
  text-align: center;
  line-height: 54rpx;
  box-sizing: border-box;
  border-right: 1rpx solid #CBCBCB;
  color: #353535;
  background: #FAFAFA;  
}
.cart-item .info .count-container .count-item:last-child {
  border-right: 0;
}
.cart-item .info .count-container .count-item.count {
  padding-left: 14rpx;
  flex: 1;
  background-color: #fff;
}
.cart-item .info .count-container .count-item.disable {
  color: rgba(53, 53, 53, .3);
}

/* 结算条  */
.tool-bar {
  height: 102rpx;
  position: fixed;
  left: 0;
  line-height: 102rpx;
  bottom: 0;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
} 
.tool-bar .price-name {
  margin-left: 38rpx;
  font-size: 28rpx;
  color: #555555;
  margin-right: 16rpx;
}
.tool-bar .price-value {
  font-size: 40rpx;
  color: #409CE0;
  flex: 1;
}
.tool-bar .price-value::first-letter {
  font-size: 32rpx;
  color: #409CE0;
  margin-right: 7rpx;
}
.tool-bar .btn-pay {
  margin-right: 20rpx;
  background-color: #409CE0;
  color: #fff;
  border-radius: 9rpx;
  font-size: 30rpx;
  width: 193rpx;
  height: 70rpx;
  line-height: 70rpx;
}
.tool-bar .btn-pay:active {
  opacity: 0.7;
}
.tool-bar .btn-pay.disable {
  opacity: 0.3;
}
.tool-bar .btn-pay.disable:active {
  opacity: 0.3;
}