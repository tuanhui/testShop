Page {
  width: 100%;
}
.cart-list {
  flex:1;
  width: 100%;
  padding-bottom: 50px;
  overflow: hidden;
}
.cart-item {
    width: 115%;   
    display: flex;
    flex-direction: row;
    border-bottom: 1rpx solid #ddd;
    box-sizing: border-box;
    padding: 20rpx 0;
}
.cart-item .item-detail {
  width: 100%;
  display: flex;
  margin-right: 20rpx;
  flex-direction: row;
}
.cart-item .item-detail .check {
  line-height:  200rpx;
  height: 200rpx;
  width: 15%;
  display: inline-block;
  text-align: center;
}
.cart-item .item-detail .check > .c-pic {
  width: 20px;
  height: 20px;
}
.cart-item .item-detail .pic {
  height: 200rpx;
  width: 160rpx;
}
.cart-item .item-detail .info {
  vertical-align: top;
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}
.cart-item .item-detail .info .name {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 34rpx;
    line-height: 50rpx;
    font-weight: bold;
    color: rgb(80, 80, 80);
}
.cart-item .item-detail .info .price {
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #f00;
}
.cart-item .item-detail .info .price:decrement {
  color: blueviolet;
}
.cart-item .item-detail .info .count-container {
    display: inline-block;
    border: 1rpx solid rgb(220, 220, 220);
    border-radius: 8rpx;
    box-sizing: border-box;
    height: 48rpx;
    position: relative;
    z-index: 0;
    width: 176rpx;
    line-height: 48rpx;
    overflow: hidden;
}
.cart-item .item-detail .info .count-container .count-item  {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  font-size: 30rpx;
  box-sizing: border-box;
  vertical-align: top; 
  line-height: 48rpx;
  border-right: 1rpx solid rgb(220, 220, 220);
  color: rgb(102, 102, 102);
}
.cart-item .item-detail .info .count-container .count-item.minus.disable {
  color: rgb(220, 220, 220);
}
.cart-item .item-detail .info .count-container .count-item.count {
  width: 70rpx;
}
.cart-item .item-detail .info .count-container .count-item:last-child {
  border-right: 0;
}
.cart-item .item-del {
  height: 200rpx;
  line-height: 200rpx;
  color: #fff;
  background-color: red;
  width: 62px;
  font-size: 28rpx;
  text-align: center;
 }

/* 结算条  */
.tool-bar {
  height: 100rpx;
  border-top: 1px solid #ddd;
  box-shadow: 2px 0 5px #999;
  position: fixed;
  left: 0;
  line-height: 100rpx;
  box-sizing: border-box;
  bottom: 0;
  width: 100%;
  background-color: #fff;
}
.tool-bar .check-item {
  font-size: 30rpx;
  color: #666;
  display: inline;
  margin-left: 20rpx;
  line-height: 100rpx;
}
.tool-bar .check-item .check-item-value {
    margin-left: 6rpx;
}
.tool-bar .settlement {
  width: 200rpx;
  font-size: 32rpx;
  text-align: center;
  background-color: red;
  color: white;
  position: absolute;
  right: 0;
  top: 0;
}
.tool-bar .settlement.disable {
    background-color: rgb(204, 204, 204);
    color: rgb(148, 148, 148);
}
.tool-bar .settlement .settlement-value {
  font-size: 24rpx;
}
.tool-bar .compute-item {
  height: 100rpx;
  position: absolute;
  right: 200rpx;
  padding: 10rpx 0;
  min-width: 250rpx; 
  margin-right: 20rpx;
  top: 0;
}
.tool-bar .compute-item .total {
    height: 45rpx; 
    font-size: 28rpx;
    top: 10rpx;
    position: absolute;
    right: 0;
    white-space: nowrap;
    line-height: 45rpx;
  }
  .tool-bar .compute-item .total .total-value {
    color: #f00;
  }
  .tool-bar .compute-item .freight {
    height: 35rpx;
    line-height: 35rpx; 
    position: absolute;
    right: 0;
    top: 55rpx;
    color: #666;
    font-size: 24rpx;
  }