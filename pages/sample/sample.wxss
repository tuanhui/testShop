/*重新加载  */
.reload {
  display: block;
  width: 300rpx;
  height: 82rpx;
  color: #939393;
  border: 2rpx solid #D1D1D1;
  border-radius: 10rpx;
  line-height: 82rpx;
  text-align: center;
  font-size: 36rpx;
  margin: 200rpx auto;
}
.reload:active {
