/* 底部共进条 */
.tool-bar {
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 102rpx;
  line-height: 102rpx;
  position: fixed;
  background-color: #fff;
  box-shadow: 0 -1px 0 0 rgba(0,0,0,0.10);
  bottom: 0;
  left: 0;
}
.tool-bar .price {
  flex: 1;
  display: flex;
  flex-direction: row;
}
.tool-bar .price .real {
  margin-left: 32rpx;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #409CE0;
}
.tool-bar .price .real::first-letter {
  font-size: 30rpx;
}

.tool-bar .price .original {
   display: flex;
   margin-left: 28rpx;
   flex-direction: row;
}
.tool-bar .price .original .name {
  font-size: 24rpx;
  padding-top: 2rpx;
  color: #B2B2B2;
}
.tool-bar .price .original .value {
  font-size: 30rpx;
  color: #B2B2B2;
  margin-left: 9rpx;
  letter-spacing: -1rpx;
}
.tool-bar .price .original .value::first-letter {
  font-size: 20rpx;
  margin-right: 2rpx;
}
.add-cart {
  width: 86rpx;
  height: 70rpx;
  background: #409CE0;
  border-radius: 9rpx;
  position: relative;
  margin: auto 0;
}
.add-cart .icon {
  position: absolute;
  width: 36rpx;
  height: 31rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%); 
}
.to-buy {
  background: #409CE0;
  border-radius: 9rpx;
  color: #fff;
  font-size: 26rpx;
  width: 193rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  margin: auto 20rpx;
}
.add-cart:active,
.to-buy:active {
  opacity: .7;
}
