Page {
  background-color: rgb(249, 249, 249);
}
swiper {
  height: 680rpx;
  background-color: #ddd;
}
.slide-image {
  height: 680rpx;
  background-size: contain contain;
}
.content {
  margin-bottom: 100rpx;
}
.content .info {
  background-color: #fff;
  border-bottom: 1rpx solid rgb(236, 236, 236);
}
.content .info .title{
    padding-top: 32rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    line-height: 50rpx;
    font-size: 40rpx;
    color: rgb(97, 97, 97);
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-weight: bold;
}
.content .info .price {
  height: 100rpx;
  margin-left: 20rpx;
  line-height: 100rpx;
  font-size: 46rpx;
  color: #f00;
}
.content .info .freight {
  margin-left: 20rpx;
  box-sizing: border-box;
  height: 80rpx;
  border-top: 1rpx solid rgb(236, 236, 236);
  line-height: 80rpx;
  color: rgb(169, 169, 169);
  font-size: 32rpx;
}
.content .buy-count {
    color: rgb(93, 93, 93);
    padding: 0 20rpx;
    border-top: 1rpx solid rgb(236, 236, 236);
    margin-top: 22rpx;
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1rpx solid rgb(236, 236, 236);
    background-color: #fff;
}
.content .buy-count .count-container {
    margin-top: 21rpx;
    border: 1rpx solid rgb(220, 220, 220);
    border-radius: 8rpx;
    box-sizing: border-box;
    float: right;
    height: 58rpx;
    position: relative;
    z-index: 0;
    line-height: 58rpx;
    overflow: hidden;
}
.content .buy-count .count-container .count-item  {
  display: inline-block;
  width: 58rpx;
  height: 58rpx;
  text-align: center;
  font-size: 30rpx;
  box-sizing: border-box;
  vertical-align: top; 
  line-height: 58rpx;
  border-right: 1rpx solid rgb(220, 220, 220);
  color: rgb(102, 102, 102);
}
.content .buy-count .count-container .count-item.minus.disable {
  color: rgb(220, 220, 220);
}
.content .buy-count .count-container .count-item.count {
  width: 70rpx;
}
.content .buy-count .count-container .count-item:last-child {
  border-right: 0;
}
.content .intro .title {
  padding-left: 20rpx;
  border-top: 1rpx solid rgb(236, 236, 236);
  margin-top: 20rpx;
  font-size: 36rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  color: rgb(93, 93, 93);
}
/* 底部共进条 */
.tool-bar {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  width: 100%;
  position: fixed;
  background-color: #fff;
  border-top: 1px solid #999;
  box-sizing: border-box;
  box-shadow: 2px 0 2px #ddd;
  bottom: 0;
  left: 0;
}
.item-1 {
  height: 100rpx;
  width: 100rpx;
  display: flex;
  text-align: center;
  flex-direction: column;
  box-sizing: border-box;
  border-right: 1px solid #ddd;
}
.item-1 .icon {
  width: 24px;
  height: 24px;
  margin: 13rpx auto 0rpx auto;
}
.item-1 .text {
  height: 24rpx;
  line-height: 24rpx;
  color: #999;
  font-size: 22rpx;
}
.item-2 {
  flex: 1;
  color: rgb(255, 213, 215);
  font-size: 32rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: rgb(255, 123, 69);
  text-align: center;
}
.item-2:last-child{
  background-color: rgb(255, 44, 0);
}