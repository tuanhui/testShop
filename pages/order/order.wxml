<view class="order-list">
    <block wx:for="{{orders}}" wx:for-item="order" wx:key="*this">
        <view class="order-item">
            <view class="head" data-number="{{order.order_number}}" bindtap="{{order.order_type !== 0 ? 'toOrderDetail' : ''}}">
                <view class="head-l">
                    <view class="item">
                        <text class="name">状态：</text>
                        <text class="value status">{{order.order_type == 0 ? '等待支付' : (order.order_type == 1 ? '待发货' : (order.order_type == 2 ? '已发货' : '已签收'))}}</text>
                    </view>
                    <view class="item">
                        <text class="name">订单：</text>
                        <text class="value">{{order.order_number}}</text>
                    </view>
                </view>
                <view class="head-r">
                    <button class="to-pay" wx:if="{{order.order_type == 0}}" data-id="{{order.prepay_id}}" bindtap="toBuy">去支付</button>
                    <image class="arrow" src="/imgs/ic_arrow_right.png" wx:if="{{order.order_type > 0}}"></image>
                </view>
            </view>
            <view class="product-list">
                <block wx:key="*this" wx:for="{{order.products}}" wx:for-item="product">
                    <view class="product-item">
                        <image class="pic" src="{{product.img}}"></image>
                        <view class="info">
                            <view class="name">
                                <view class="name-val">{{product.name}}</view>
                                <view class="name-count">x{{product.count}}</view>
                            </view>
                            <view class="intro">{{product.intro}}</view>
                            <view class="price">
                              <view class="name"></view>
                              <view class="value">￥{{product.price}}</view> 
                            </view>
                        </view>
                    </view>
                </block>
            </view>
        </view>
    </block>
</view>